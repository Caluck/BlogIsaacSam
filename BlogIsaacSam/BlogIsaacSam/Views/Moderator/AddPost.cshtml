@model BlogIsaacSam.Models.Data.ViewModelClasses.PostAddVM
@{
    ViewBag.Title = "Add Post";
}

<head>
    <script src="https://cdn.tiny.cloud/1/rs7hp7qwcqt4qkkebwb0pnhpvvr6fr6qv1oouwr9f08zbpu5/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
</head>

<h2>Add Post</h2>

<script>
    tinymce.init({
        selector: 'textarea',
        plugins: 'a11ychecker advcode casechange formatpainter linkchecker autolink lists checklist media mediaembed pageembed permanentpen powerpaste table advtable tinycomments tinymcespellchecker',
        toolbar: 'a11ycheck addcomment showcomments casechange checklist code formatpainter pageembed permanentpen table',
        toolbar_mode: 'floating',
        tinycomments_mode: 'embedded',
        tinycomments_author: 'Author name',
    });
</script>

<div class="col-xs-12">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label>Category</label>
            @Html.TextAreaFor(x => x.TagLine, new { @class = "form-control", placeholder = "Separate using commas..." })
            <label>Title</label>
            @Html.TextBoxFor(x => x.Title, new { @class = "form-control", placeholder = "Title", required = "required" })
            <label>Details</label>
            @Html.TextAreaFor(x => x.Content, new { @class = "form-control", placeholder = "What are your thoughts?" })
            <label>Tags</label>
            @Html.TextAreaFor(x => x.TagLine, new { @class = "form-control", placeholder = "Separate using commas..." })
        </div>
        <button type="submit" class="btn btn-sm btn-primary">Post</button>
    }
</div>
